<dialog xmlns="http://undertow.org/io" id="io-subsystem">

		<editorpanel id="io-subsystem" operator="Concurrency">
			<dmr address="/{selected.profile}/subsystem=io"/>

            <container id="editors" operator="Choice">
				<container xmlns="http://undertow.org/io/workers" id="workers" operator="Concurrency">
					<toolstrip id="worker-tools" operator="Concurrency">
						<dmr address="/{selected.profile}/subsystem=io/worker={selected.entity}"/>
						<trigger id="add" type="org.jboss.as:resource-operation#add">
							<dmr address="/{selected.profile}/subsystem=io/worker=*">
								<attribute name="entity.key"/>
							</dmr>
						</trigger>
						<trigger id="remove" type="org.jboss.as:resource-operation#remove"/>
					</toolstrip>
					<select id="worker">
						<dmr address="/{selected.profile}/subsystem=io/worker=*">
							<attribute name="entity.key"/>
						</dmr>
					</select>
					<form id="workerDetails" operator="Concurrency">
						<dmr address="/{selected.profile}/subsystem=io/worker={selected.entity}"/>
					</form>
				</container>

				<container xmlns="http://undertow.org/io/buffers" id="buffers" operator="Concurrency">
					<toolstrip id="buffer-tools" operator="Concurrency">
						<dmr address="/{selected.profile}/subsystem=io/buffer-pool={selected.entity}"/>
						<trigger id="add" type="org.jboss.as:resource-operation#add">
							<dmr address="/{selected.profile}/subsystem=io/buffer-pool=*">
								<attribute name="entity.key"/>
							</dmr>
						</trigger>
						<trigger id="remove" type="org.jboss.as:resource-operation#remove"/>
					</toolstrip>
					<select id="buffer">
						<dmr address="/{selected.profile}/subsystem=io/buffer-pool=*">
							<attribute name="entity.key"/>
						</dmr>
					</select>
					<form id="bufferDetails" operator="Concurrency">
						<dmr address="/{selected.profile}/subsystem=io/buffer-pool={selected.entity}"/>
					</form>
				</container>
			</container>
		</editorpanel>

</dialog>
