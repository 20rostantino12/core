<dialog xmlns="http://wildfly.org/undertow/server-config" id="server-config">

    <editorpanel id="server" label="Server Config">

        <container xmlns="http://wildfly.org/undertow/server" id="server" label="Server" operator="Concurrency">
            <form id="server#common" label="Attributes">
                <dmr address="/{selected.profile}/subsystem=undertow/server=default-server">
                    <attribute name="default-host"/>
                    <attribute name="servlet-container"/>
                </dmr>
            </form>
        </container>

        <container xmlns="http://wildfly.org/undertow/servlet" id="servletContainer" label="Servlet Container" operator="Concurrency">


            <pages id="servlet-configuration" operator="Choice">

                <container id="common" label="Common">
                    <form id="servletContainer">
                        <dmr address="/{selected.profile}/subsystem=undertow/servlet-container=default"/>
                    </form>
                </container>

                <container id="JSP">
                    <form id="servletContainer#jsp">
                        <dmr address="/{selected.profile}/subsystem=undertow/servlet-container=default/setting=jsp"/>
                    </form>
                </container>

                <container id="sessions" label="Sessions">
                    <form id="servletContainer#sessions">
                        <dmr address="/{selected.profile}/subsystem=undertow/servlet-container=default/setting=persistent-sessions"/>
                    </form>
                </container>

            </pages>
        </container>

    </editorpanel>
</dialog>
