<dialog xmlns="http://wildfly.org/webservices" id="webservices-subsystem">

    <editorpanel id="main" label="Webservices">

        <!-- overall configuration -->
        <container xmlns="http://wildfly.org/webservices/config" id="jobs" label="Subsystem">
            <dmr address="/{selected.profile}/subsystem=webservices"/>
            <form id="config#overall"/>
        </container>

        <!-- client configs -->
        <container  xmlns="http://wildfly.org/webservices/client-config" id="config" label="Client Config">
            <dmr address="/{selected.profile}/subsystem=webservices/client-config=*"/>

            <toolstrip id="tools">
                <dmr address="/{selected.profile}/subsystem=webservices/client-config={selected.entity}"/>
                <trigger id="add" type="org.jboss.as:resource-operation#add" label="Add">
                    <dmr address="/profile={selected.profile}/subsystem=webservices/client-config=*"/>
                </trigger>
                <trigger id="remove" type="org.jboss.as:resource-operation#remove" label="Remove"/>
            </toolstrip>

            <select id="client-config-list">
                <dmr>
                    <attribute name="entity.key"/>
                </dmr>
            </select>

            <container id="handler" operator="Choice">
                <container id="pre-handler" label="Pre Handler">
                    <!--dmr address="{selected.profile}/subsystem=webservices/client-config={selected.entity}/pre-handler-chain"/-->
                    <todo label="sub resources?"/>
                </container>
                <container id="post-handler" label="Post Handler">
                    <!--dmr address="{selected.profile}/subsystem=webservices/client-config={selected.entity}/pre-handler-chain"/-->
                    <todo label="sub resources?"/>
                </container>
            </container>

        </container>


    </editorpanel>

</dialog>
