<dialog id="datasource-subsystem">

		<editorpanel id="org.jboss.datasource:datasources" operator="Choice">
			<dmr address="/{selected.profile}/subsystem=datasources/data-source=*"/>

			<container id="org.jboss.datasource:regularDS" operator="Concurrency" label="Datasources">
				<toolstrip id="org.jboss.datasource:tools" operator="Concurrency">
					<dmr address="/{selected.profile}/subsystem=datasources/data-source={selected.entity}"/>
					<trigger id="org.jboss.datasource:add" type="org.jboss.as:resource-operation#add" label="Add">
						<dmr address="/{selected.profile}/subsystem=datasources/data-source=*"/>
					</trigger>
					<trigger id="org.jboss.datasource:remove" type="org.jboss.as:resource-operation#remove" label="Remove"/>
					<trigger id="org.jboss.datasource:enable" type="org.jboss.as:resource-operation#enable" label="Enable"/>
					<trigger id="org.jboss.datasource:disable" type="org.jboss.as:resource-operation#disable" label="Disable"/>
				</toolstrip>
				<select id="org.jboss.datasource:list">
					<dmr>
						<attribute name="entity.key"/>
						<attribute name="jndi-name"/>
						<attribute name="enabled"/>
					</dmr>
				</select>
				<container id="org.jboss.datasource:details" operator="Choice">
					<dmr address="/{selected.profile}/subsystem=datasources/data-source={selected.entity}"/>
					<form id="org.jboss.datasource:datasource#basicAttributes" operator="Concurrency" label="Attributes">
						<dmr>
							<attribute name="entity.key"/>
							<attribute name="jndi-name"/>
							<attribute name="enabled"/>
							<attribute name="datasource-class"/>
							<attribute name="driver-name"/>
							<attribute name="share-prepared-statements"/>
							<attribute name="prepared-statements-cache-size"/>
						</dmr>
					</form>
					<form id="org.jboss.datasource:datasource#connectionAttributes" operator="Concurrency" label="Connection">
						<dmr>
							<attribute name="connection-url"/>
							<attribute name="new-connection-sql"/>
							<attribute name="transaction-isolation"/>
							<attribute name="jta"/>
							<attribute name="use-ccm"/>
						</dmr>
					</form>
					<form id="org.jboss.datasource:datasource#securityAttributes" operator="Concurrency" label="Security">
						<dmr>
							<attribute name="user-name"/>
							<attribute name="password"/>
							<attribute name="security-domain"/>
						</dmr>
					</form>
				</container>
			</container>
			<container id="org.jboss.datasource:xsDS" operator="Concurrency" label="XA-Datasources"/>
		</editorpanel>

</dialog>
