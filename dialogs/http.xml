<dialog id="org.undertow.http-server">

		<editorpanel id="org.undertow:httpServer" operator="Choice">
			<pages id="org.undertow:listener" operator="Choice" label="Listener">

                <container id="org.undertow:listener#http" operator="Concurrency" label="HTTP">
					<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/http-listener=*">
						<attribute name="entity.key"/>
						<attribute name="enabled"/>
					</dmr>
					<toolstrip id="org.undertow:httptools" operator="Concurrency">
						<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/http-listener={selected.entity}"/>
						<trigger id="org.undertow.listener.http:add" type="org.jboss.as:resource-operation#add" label="Add">
							<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/http-listener=*">
								<attribute name="entity.key"/>
								<attribute name="enabled"/>
							</dmr>
						</trigger>
						<trigger id="org.undertow.listener.http:remove" type="org.jboss.as:resource-operation#remove" label="Remove"/>
					</toolstrip>
					<select id="org.undertow:httpListener">
						<dmr>
							<attribute name="entity.key"/>
							<attribute name="enabled"/>
						</dmr>
					</select>
					<container id="org.undertow:undertow#httpListenerConfig" operator="Choice">
						<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/http-listener={selected.entity}"/>
						<form id="org.undertow:undertow#httpListenerAttributes" operator="Concurrency" label="Attributes">
							<dmr>
								<attribute name="worker"/>
								<attribute name="enabled"/>
								<attribute name="socket-binding"/>
								<attribute name="buffer-pool"/>
							</dmr>
						</form>
					</container>
				</container>

				<container id="org.undertow:listener#ajp" operator="Concurrency" label="AJP">
					<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/ajp-listener=*">
						<attribute name="entity.key"/>
						<attribute name="enabled"/>
					</dmr>
					<toolstrip id="org.undertow:ajptools" operator="Concurrency">
						<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/ajp-listener={selected.entity}"/>
						<trigger id="org.undertow.listener.ajp:add" type="org.jboss.as:resource-operation#add">
							<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/ajp-listener=*">
								<attribute name="entity.key"/>
								<attribute name="enabled"/>
							</dmr>
						</trigger>
						<trigger id="org.undertow.listener.ajp:remove" type="org.jboss.as:resource-operation#remove"/>
					</toolstrip>
					<select id="org.undertow:ajpListener">
						<dmr>
							<attribute name="entity.key"/>
							<attribute name="enabled"/>
						</dmr>
					</select>
					<container id="org.undertow:undertow#ajpListenerConfig" operator="Choice">
						<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/ajp-listener={selected.entity}"/>
						<form id="org.undertow:undertow#ajpListenerAttributes" operator="Concurrency" label="Attributes">
							<dmr>
								<attribute name="worker"/>
								<attribute name="enabled"/>
								<attribute name="socket-binding"/>
								<attribute name="buffer-pool"/>
							</dmr>
						</form>
					</container>
				</container>

				<container id="org.undertow:listener#https" operator="Concurrency" label="HTTPS">
					<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/https-listener=*">
						<attribute name="entity.key"/>
						<attribute name="enabled"/>
					</dmr>
					<toolstrip id="org.undertow:httpstools" operator="Concurrency">
						<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/https-listener={selected.entity}"/>
						<trigger id="org.undertow.listener.https:add" type="org.jboss.as:resource-operation#add">
							<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/https-listener=*">
								<attribute name="entity.key"/>
								<attribute name="enabled"/>
							</dmr>
						</trigger>
						<trigger id="org.undertow.listener.https:remove" type="org.jboss.as:resource-operation#remove"/>
					</toolstrip>
					<select id="org.undertow:httpsListener">
						<dmr>
							<attribute name="entity.key"/>
							<attribute name="enabled"/>
							<attribute name="security-realm"/>
						</dmr>
					</select>
					<container id="org.undertow:undertow#httpsListenerConfig" operator="Choice">
						<dmr address="/{selected.profile}/subsystem=undertow/server=default-server/https-listener={selected.entity}"/>
						<form id="org.undertow:undertow#httpsListenerAttributes" operator="Concurrency" label="Attributes">
							<dmr>
								<attribute name="worker"/>
								<attribute name="enabled"/>
								<attribute name="socket-binding"/>
								<attribute name="buffer-pool"/>
								<attribute name="security-realm"/>
							</dmr>
						</form>
					</container>
				</container>
			</pages>
		</editorpanel>

</dialog>
