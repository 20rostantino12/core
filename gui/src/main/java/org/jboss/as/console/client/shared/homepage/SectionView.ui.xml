<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .section {
            padding: 25px 0;
            border-bottom: 1px solid #ccc;
            width: 100%;
        }

        .secondaryHeader {
            margin: 0;
            padding: 0;
            font: "Open Sans" 18px;
            font-weight: 300;
            color: #4d5238;
        }

        .sectionIcon {
            margin-left: 10px;
        }

        .intro {
            margin: 10px 0 20px 0;
            font: "Open Sans" 13px;
            color: #4d5258;
        }
    </ui:style>
    <g:DisclosurePanel ui:field="disclosurePanel" addStyleNames="{style.section}">
        <g:customHeader>
            <g:HTML>
                <h2 class="{style.secondaryHeader}">
                    <span ui:field="header"/>
                    <span class="{style.sectionIcon}">
                        <i class="icon-angle-right"></i>
                    </span>
                </h2>
            </g:HTML>
        </g:customHeader>
        <g:HTMLPanel>
            <p ui:field="intro" class="{style.intro}"/>
            <g:FlowPanel ui:field="body"/>
        </g:HTMLPanel>
    </g:DisclosurePanel>
</ui:UiBinder>