<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .main {
            padding: 30px 15px 0 20px;
            border-right: solid 1px #c8c8c8;
        }

        .main > header {
            padding-bottom: 25px;
            border-bottom: 1px solid #ccc;
        }

        .main > header > h1 {
            margin: 0 0 15px 0;
            padding: 0;
        }

        .main > header > p {
            margin: 0;
            padding: 0;
        }

        .title {
            font: "Open Sans" 24px;
            font-weight: 300;
            color: #4d5238;
        }

        .secondaryHeader {
            font: "Open Sans" 18px;
            font-weight: 300;
            color: #4d5238;
        }

        .leadParagraph {
            font: "Open Sans" 13px;
            color: #4d5238;
        }

        aside {
            padding: 30px 20px 0 15px;
            background-color: #f6f6f6;
            height: 100%;
        }

        aside > h2 {
            margin: 0 0 25px 0;
            padding: 0;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PCT">
        <g:center>
            <g:ScrollPanel>
                <g:HTMLPanel addStyleNames="{style.main}">
                    <header>
                        <h1 ui:field="header" class="{style.title}"/>
                        <p ui:field="intro" class="{style.leadParagraph}"/>
                    </header>
                    <g:FlowPanel ui:field="sections"/>
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:center>
        <g:east size="25">
            <g:ScrollPanel>
                <g:HTMLPanel>
                    <aside>
                        <h2 ui:field="sidebarHeader" class="{style.secondaryHeader}"/>
                        <g:FlowPanel ui:field="sidebarSections"/>
                    </aside>
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:east>
    </g:DockLayoutPanel>
</ui:UiBinder>